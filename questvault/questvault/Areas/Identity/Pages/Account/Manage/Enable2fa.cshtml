@page
@model Enable2faModel
@{
    ViewData["Title"] = "Enable two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<body class="login-body">
    <div style="margin-top:300px" class="main-section-2fa">
        <h3 class="h3-2fa">@ViewData["Title"]</h3>
        <div>
            <p class="p-forgotp" style="margin-top:20px">Are you sure you want to change the two factor authentication to enabled?</p>
            <div class="2fa-buttons">
                <div class="action_btn">
                    <form method="post">
                        <button class="btn-2fa btn-primary submit" type="submit">Enable 2FA</button>
                    </form>
            
                    <form class="form-inline" asp-area="Identity" asp-page="./Index">
                        <button type="submit" class="btn btn-danger btn-danger-2fa">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>