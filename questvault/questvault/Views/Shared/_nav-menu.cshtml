@{
}

<nav class="navbar navbar-dark navbar-expand-lg nav-main nav-bg">
    <div class="container-fluid">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="nav-logo2" asp-controller="Home" asp-action="Index">
                <img src="\img\logo_icon.png" alt="QuestVault Logo" class="img-fluid">
            </a>
        } else {
            <a class="nav-logo" asp-controller="Home" asp-action="Index">
                <img src="\img\logo_questvault.png" alt="QuestVault Logo" class="img-fluid">
            </a>
        }
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto me-1 mb-lg-0">
            @if (SignInManager.IsSignedIn(User))
            {
                @* @joaoCoelho o q queres por se o user tiver signed in? *@
                    <li class="nav-item ms-3 d-flex align-self-center">
                  <a class="btn btn-primary nav-btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                </li>
                <li class="nav-item ms-3 d-flex align-self-center">
                  <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Context.Request.Headers["Refer"].ToString()">
                    <button type="submit" class="btn btn-primary nav-btn">Logout</button>
                  </form>
                </li>
            }
            else
            {
                <li class="nav-item ms-3 d-flex align-self-center">
                    <a class="btn btn-primary nav-btn" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Headers["Refer"].ToString()">Sign in</a>
                </li>
                <li class="nav-item ms-3 d-flex align-self-center">
                    <a class="btn btn-primary nav-btn-2" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Context.Request.Headers["Refer"].ToString()">Sign up</a>
                </li>
            }
            <li class="nav-item ms-3 d-flex align-self-center">
                <select #lang (change)="onSelected(lang.value)" class="form-select nav-form-select">
                    <option selected value="en">en</option>
                    <option value="pt">pt</option>
                </select>
            </li>
            </ul>
        </div>
    </div>
</nav>
