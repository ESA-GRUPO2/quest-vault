@model ChangeUsernameViewModel

@{
    ViewData["Title"] = "Change Details";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeUsername" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="newUsername">Username</label>
                <input id="newUsername" name="NewUsername" class="form-control" placeholder="@Model.CurrentUsername" />
                <span asp-validation-for="NewUsername" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
    </div>
</div>